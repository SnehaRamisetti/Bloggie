@model  CRUD.Models.Employee

@{
    ViewData["Title"] = "Create Employee";
}

<form asp-action="Create" asp-area="Employee" method="post">
    <div class="row">
        <div class="col-lg-12">
            @* <div class="form-group">
                <label>Employee ID:</label>
                <input asp-for="EmpID" type="text" class="form-control required" placeholder="Enter Employee Id" tabindex="1">
            </div> *@
             <div class="form-group">
                <label>First Name:</label>
                <input asp-for="FirstName" type="text" class="form-control required" placeholder="Enter First Name" tabindex="2">
            </div>
             <div class="form-group">
                <label>Last Name:</label>
                <input asp-for="LastName" type="text" class="form-control required" placeholder="Enter Last Name" tabindex="3">
            </div>
             <div class="form-group">
                <label>Email:</label>
                <input asp-for="Email" type="text" class="form-control required" placeholder="Enter Employee Email" tabindex="2">
            </div>
             <div class="form-group">
                <label>MobileNo:</label>
                <input asp-for="MobileNo" type="text" class="form-control required" placeholder="Enter MobileNo" tabindex="3">
            </div>
            <div class="form-group">
                <label>Salary:</label>
                <input asp-for="Salary" type="text" class="form-control required" placeholder="Enter Salary" tabindex="3">
            </div>
             <div class="form-group">
                <label>Role:</label>
                <input asp-for="Role" type="text" class="form-control required" placeholder="Enter Role" tabindex="4">
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Add Employee</button>
                    <a asp-action="Index" asp-controller="Employee" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        
        </div>
    </div>
</form>