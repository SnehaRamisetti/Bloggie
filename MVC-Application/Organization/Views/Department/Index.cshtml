@model List<CRUD.Models.Department>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Department" class="btn btn-success">Add Department</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    @* <td>Department ID</td> *@
                    <td>Department Name</td>
                    <td>Location</td>
                    <td>Head of the Department</td>
                     
                    <td>Edit</td>
                    <td>Delete</td>
                     
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @* <td>@item.EmpID</td> *@
                    <td>@item.Name</td>
                    <td>@item.Location</td>
                    <td>@item.HeadOfDept</td>
                     

                    <td>
                        <a asp-action="Edit" asp-controller="Department" asp-route-id="@item.Id">
                            Edit
                        </a>
                        
                    </td>
                    <td>
                       
                        <a asp-action="Delete" asp-controller="Department" asp-route-id="@item.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>