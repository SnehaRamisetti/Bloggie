@model  CRUD.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<form asp-action="Create" asp-area="Department" method="post">
    <div class="row">
        <div class="col-lg-12">
            @* <div class="form-group">
                <label>Department ID:</label>
                <input asp-for="EmpID" type="text" class="form-control required" placeholder="Enter Department Id" tabindex="1">
            </div> *@
             <div class="form-group">
                <label>Department Name:</label>
                <input asp-for="Name" type="text" class="form-control required" placeholder="Enter  Name" tabindex="2">
            </div>
             <div class="form-group">
                <label>Location:</label>
                <input asp-for="Location" type="text" class="form-control required" placeholder="Enter Location" tabindex="3">
            </div>
             <div class="form-group">
                <label>Head Of Department:</label>
                <input asp-for="HeadOfDept" type="text" class="form-control required" placeholder="Enter HeadOfDept" tabindex="2">
            </div>
             
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Add Department</button>
                    <a asp-action="Index" asp-controller="Department" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        
        </div>
    </div>
</form>